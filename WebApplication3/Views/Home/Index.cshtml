@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div>
    <div style="margin-top:10%;">
        <div class="card" style="width:30%; border-radius:25px; margin:auto auto; float: none;">
            <div class="card-body">
                <form action="@Url.Action("Menu")" method="POST">
                    <div class="form-group">
                        <center>
                            <img class="img-fluid" src="~/Imagens/Logo.png" style="width:80%;height:50%;" alt="Imagem responsiva">
                        </center>
                        <div class="row" style="padding-left:8%;padding-right:8%;">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 ">
                                <label for="login" style="align-items:flex-start">Login</label>
                                <input type="text" id="login" name="login" placeholder="Digite o Login Cadastrado" style="width:100%;" class="form-control" />
                            </div>
                        </div>
                        <br />
                        <div class="row" style="padding-left:8%;padding-right:8%;">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 ">
                                <label for="senha">Senha</label>
                                <input type="password" id="senha" name="senha" placeholder="Digite aqui sua Senha" class="form-control" />
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <center>
                                <div class="col-xs-12 col-sm-12 col-md-10 col-lg-8 ">
                                    <button class="btn btn-primary" style="width: 100%;" type="submit">Entrar</button>
                                </div>
                                <p>Clique <a href="@Url.Action("EsqueciMinhaSenha","Home")">Aqui</a> para recuperar sua senha.</p>
                            </center>
                        </div>
                        <br />
                        <br />
                        <br />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>