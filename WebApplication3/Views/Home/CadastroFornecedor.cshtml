@model PagedList.IPagedList<Fornecedor>
@using PagedList.Mvc;
@{
    ViewBag.Title = "CadastroFornecedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container body-content">
    <div class="body-content">
        <div class="row clearfix">
            <div class="col-md-12">
                <div class="header">
                    <div class="row">
                        <div class="col-7">
                            <h2>Fornecedores Cadastrados</h2>
                        </div>
                        <div class="col-5">
                            <a href="@Url.Action("CadastrarFornecedor")" class="btn btn-outline-primary"
                               data-toggle="tooltip" data-placement="top" title="Cadastrar Novo Fornecedor">
                                <i class="material-icons">add</i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th class="text-center">Código</th>
                                <th class="text-center">Nome</th>
                                <th class="text-center">CNPJ</th>
                                <th class="text-center">Editar</th>
                                <th class="text-center">Remover</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@item.FornecedorId</td>
                                    <td class="text-center">@item.Nome</td>
                                    <td class="text-center">@(item.CNPJ)</td>
                                    <td class="text-center">
                                        <a href="@Url.Action("CadastrarFornecedor", new { id = item.FornecedorId })"
                                           class="btn btn-xs btn-info" data-toggle="tooltip" data-placement="top" title="Editar Fornecedor">
                                            <i class="material-icons">edit</i>
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("DeletarFornecedor", new { id = item.FornecedorId })"
                                           class="btn btn-xs btn-danger" data-toggle="tooltip" data-placement="top" title="Excluir Fornecedor">
                                            <i class="material-icons">remove</i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

                    @Html.PagedListPager(Model, pagina => Url.Action("CadastroFornecedor", new
               {
                   pagina
               }))
                </div>
            </div>
        </div>
    </div>
</div>